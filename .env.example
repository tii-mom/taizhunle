# ===========================================
# 🚀 Taizhunle (太准了) 项目环境配置
# ===========================================

# ===========================================
# 📊 数据库配置 (Supabase)
# ===========================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-role-key
DATABASE_URL=postgresql://postgres:[password]@db.[project].supabase.co:5432/postgres

# ===========================================
# 🤖 Telegram Bot 配置
# ===========================================
# 管理员 Bot (审核、结算、通知)
TELEGRAM_ADMIN_BOT_TOKEN=your-admin-bot-token
TELEGRAM_ADMIN_BOT_USERNAME=taizhunle_admin_bot

# 用户 Bot (可选，用户交互)
TELEGRAM_USER_BOT_TOKEN=your-user-bot-token
TELEGRAM_USER_BOT_USERNAME=taizhunle_bot

# 频道和群组
TELEGRAM_CHANNEL_ID=-1001234567890
TELEGRAM_CHANNEL_USERNAME=@taizhunle_official
TELEGRAM_GROUP_ID=-1001234567890

# 管理员 ID (逗号分隔)
TELEGRAM_ADMIN_IDS=123456789,987654321,555666777

# Webhook 配置 (生产环境)
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook/telegram
TELEGRAM_WEBHOOK_SECRET=your-webhook-secret

# ===========================================
# 🌐 服务器配置
# ===========================================
PORT=3000
NODE_ENV=development
API_BASE_URL=http://localhost:3000
CLIENT_BASE_URL=http://localhost:5173

# CORS 配置
CORS_ORIGIN=http://localhost:5173,https://your-domain.com
CORS_CREDENTIALS=true

# 会话密钥
SESSION_SECRET=your-super-secret-session-key
JWT_SECRET=your-jwt-secret-key

# ===========================================
# ⛓️ TON 区块链配置
# ===========================================
# 网络配置
TON_NETWORK=testnet
TON_API_ENDPOINT=https://testnet.toncenter.com/api/v2/
TON_API_KEY=your-ton-api-key

# 主网配置 (生产环境)
# TON_NETWORK=mainnet
# TON_API_ENDPOINT=https://toncenter.com/api/v2/
# TON_API_KEY=your-mainnet-api-key

# 合约地址
TAI_TOKEN_CONTRACT=EQD...your-tai-contract-address
VESTING_CONTRACT=EQD...your-vesting-contract-address
REDPACKET_CONTRACT=EQD...your-redpacket-contract-address

# 钱包配置
PLATFORM_WALLET_ADDRESS=UQD...your-platform-wallet
PLATFORM_WALLET_PRIVATE_KEY=your-platform-private-key
REDPACKET_WALLET_ADDRESS=UQD...your-redpacket-wallet
REDPACKET_WALLET_PRIVATE_KEY=your-redpacket-private-key

# 监听器配置
PAYMENT_LISTENER_INTERVAL=5000
PAYMENT_CONFIRMATION_BLOCKS=3

# ===========================================
# 💰 业务配置
# ===========================================
# 红包销售
REDPACKET_PRICE_TON=9.99
REDPACKET_BASE_AMOUNT=10000
REDPACKET_MAX_AMOUNT=200000
REDPACKET_ACCELERATE_RATE_NORMAL=0.05
REDPACKET_ACCELERATE_RATE_BOOST=0.10
REDPACKET_SOLDOUT_THRESHOLD=8000000000

# 官方雨露
OFFICIAL_RAIN_AMOUNT=10000000
OFFICIAL_RAIN_TOTAL_SHARES=60
OFFICIAL_RAIN_TICKET_PRICE=0.3
OFFICIAL_RAIN_MIN_BONUS=5000
OFFICIAL_RAIN_MAX_BONUS=100000

# 预测市场
PREDICTION_MIN_POOL=1000000
PREDICTION_FEE_RATE=0.05
PREDICTION_CREATOR_FEE=0.015
PREDICTION_REFERRAL_FEE=0.015
PREDICTION_PLATFORM_FEE=0.02
ENFORCE_CREATION_BALANCE=false

# 申诉系统
APPEAL_DEPOSIT_AMOUNT=1000000
APPEAL_TIMEOUT_HOURS=72

# ===========================================
# 🔐 安全配置
# ===========================================
# 加密密钥
ENCRYPTION_KEY=your-32-char-encryption-key-here
HASH_SALT=your-hash-salt-rounds-12

# API 限流
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_IP_MAX=3

# 防刷配置
MAX_DAILY_CLAIMS_PER_WALLET=5
MAX_TOTAL_CLAIMS_PER_WALLET=100000
BLACKLIST_CHECK_ENABLED=true

# ===========================================
# 📧 通知配置
# ===========================================
# 邮件服务 (可选)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# 短信服务 (可选)
SMS_API_KEY=your-sms-api-key
SMS_API_SECRET=your-sms-secret

# ===========================================
# 📊 监控和日志
# ===========================================
# 日志级别
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# 监控服务
SENTRY_DSN=https://your-sentry-dsn
DATADOG_API_KEY=your-datadog-key

# 健康检查
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# ===========================================
# 🚀 部署配置
# ===========================================
# Vercel
VERCEL_URL=https://your-app.vercel.app
VERCEL_TOKEN=your-vercel-token

# Railway
RAILWAY_ENVIRONMENT=production
RAILWAY_PROJECT_ID=your-project-id

# Docker
DOCKER_REGISTRY=your-registry.com
DOCKER_IMAGE_TAG=latest

# CDN 配置
CDN_BASE_URL=https://cdn.your-domain.com
STATIC_ASSETS_URL=https://assets.your-domain.com

# ===========================================
# 🧪 测试配置
# ===========================================
# 测试数据库
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/taizhunle_test

# 测试钱包 (仅测试网)
TEST_WALLET_ADDRESS=UQD...test-wallet-address
TEST_WALLET_PRIVATE_KEY=test-private-key

# Mock 数据
ENABLE_MOCK_DATA=true
MOCK_PAYMENT_DELAY=2000

# ===========================================
# 🔧 开发工具
# ===========================================
# 热重载
VITE_HMR_PORT=24678
VITE_HMR_HOST=localhost

# 调试模式
DEBUG=taizhunle:*
VERBOSE_LOGGING=true

# 开发者工具
REACT_DEVTOOLS=true
REDUX_DEVTOOLS=true

# ===========================================
# 🌍 国际化
# ===========================================
DEFAULT_LANGUAGE=zh
SUPPORTED_LANGUAGES=zh,en
I18N_DEBUG=false

# ===========================================
# 💾 缓存配置
# ===========================================
# Redis (可选)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# 内存缓存
CACHE_TTL=300000
CACHE_MAX_SIZE=1000

# ===========================================
# 📱 移动端配置
# ===========================================
# PWA
PWA_ENABLED=true
PWA_OFFLINE_ENABLED=true

# 推送通知
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_EMAIL=mailto:your-email@domain.com

# ===========================================
# 🎨 前端配置
# ===========================================
# 主题
VITE_DEFAULT_THEME=dark
VITE_ENABLE_THEME_SWITCH=true

# 功能开关
VITE_ENABLE_REDPACKET=true
VITE_ENABLE_OFFICIAL_RAIN=true
VITE_ENABLE_USER_PREDICTION=true
VITE_ENABLE_APPEAL_SYSTEM=true

# API 端点
VITE_API_BASE_URL=http://localhost:3000/api
VITE_WS_URL=ws://localhost:3000

# 分析工具
VITE_GA_ID=G-XXXXXXXXXX
VITE_HOTJAR_ID=1234567

# ===========================================
# 🔄 定时任务配置
# ===========================================
# Cron 任务开关
ENABLE_PRICE_ADJUSTMENT=true
ENABLE_ACCELERATE_PERIOD=true
ENABLE_OFFICIAL_RAIN_CREATION=true
ENABLE_HEALTH_CHECK=true

# 任务时区
CRON_TIMEZONE=Asia/Shanghai

# 任务重试
CRON_MAX_RETRIES=3
CRON_RETRY_DELAY=5000

# ===========================================
# 📈 分析和统计
# ===========================================
# 数据分析
ANALYTICS_ENABLED=true
ANALYTICS_SAMPLE_RATE=0.1

# 用户行为追踪
USER_TRACKING_ENABLED=true
CONVERSION_TRACKING_ENABLED=true

# 财务报表
FINANCIAL_REPORT_ENABLED=true
DAILY_REPORT_TIME=09:00

# ===========================================
# 🛡️ 合规配置
# ===========================================
# KYC/AML
KYC_ENABLED=false
KYC_THRESHOLD_USD=1000
AML_CHECK_ENABLED=true

# 地区限制
RESTRICTED_COUNTRIES=US,CN,KR
IP_GEOLOCATION_ENABLED=true

# 数据保护
GDPR_COMPLIANCE=true
DATA_RETENTION_DAYS=365
